<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_repo_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="4dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.lenovo.boxme.RepoDetailsActivity"
    tools:showIn="@layout/activity_repo_details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/circle_transit"
        android:transitionName="MYTRANSITIONVIEW"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/circle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
        <TextView
            android:id="@+id/repo_name"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Testing reponame"/>

            <TextView
                android:id="@+id/repo_desc"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:text="Testing repo description"/>

            </LinearLayout>
        </LinearLayout>

            <View
                android:layout_width="150dp"
                android:layout_marginTop="16dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:background="#c0c0c0"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/owner"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="Owner"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="60dp"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/circle"
                    android:layout_height="60dp"
                    android:layout_marginTop="8dp"
                    app:civ_border_color="#FF000000"/>

                <TextView
                    android:id="@+id/owner_id"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="40dp"

                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:text="123456"/>
            </LinearLayout>

            <View
                android:layout_width="150dp"
                android:layout_marginTop="16dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:background="#c0c0c0"/>


            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginLeft="90dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/watchers"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/watchers"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="10"/>

                <ImageView
                    android:layout_marginLeft="30dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/star"/>

                <TextView
                    android:id="@+id/starred"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="10"/>

                <ImageView
                    android:layout_marginLeft="30dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/fork"/>

                <TextView
                    android:id="@+id/fork"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="10"/>
            </LinearLayout>
        </LinearLayout>





